<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_tab_toolbar_height"
        android:contentInsetStart="0dp"
        android:contentInsetLeft="0dp"
        android:visibility="gone"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:layout_collapseMode="pin">

        <include layout="@layout/layout_main_common_title_v6_3" />
    </android.support.v7.widget.Toolbar>

    <com.megore.play.widget.customview.CustomFunTabLayout
        android:id="@+id/fun_tab_layout"
        style="@style/TabLayoutStyle"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        app:tabGravity="center"
        app:tabMaxWidth="0dp"
        app:tabMode="scrollable" />

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout><!-- TOP SECRET -->
