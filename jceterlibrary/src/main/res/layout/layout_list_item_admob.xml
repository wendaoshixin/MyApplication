<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/admob_container"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="wrap_content">
    <View
            android:id="@+id/top_divider_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_divider_line_height"
            android:background="@color/color_divider_line"
            android:layout_gravity="top"
            android:visibility="visible"/>


    <LinearLayout
            android:id="@+id/admob_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>

    <View
            android:id="@+id/bottom_divider_line"
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:layout_height="@dimen/dp_divider_line_height"
            android:background="@color/color_divider_line"
            android:visibility="visible"/>
</LinearLayout>