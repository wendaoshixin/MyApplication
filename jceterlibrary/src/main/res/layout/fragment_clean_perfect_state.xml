<?xml version="1.0" encoding="utf-8"?><!--推荐相关-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_tab_toolbar_height"
        android:background="#0A9BEB" />
    <!--手机已达完美状态-->
    <LinearLayout
        android:id="@+id/ll_perfect"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0A9BEB"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_shield"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="135dp"
            android:layout_marginBottom="48dp"
            android:src="@mipmap/img_shield" />

        <TextView
            android:id="@+id/tv_perfect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="middle"
            android:singleLine="true"
            android:text="@string/phone_is_perfect"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:visibility="visible"/>

        <!--广告-->
        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
        <LinearLayout
            android:id="@+id/container_ad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            />

    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_perfect_copy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#0A9BEB"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <!--手机已达完美状态-->
                <ImageView
                    android:id="@+id/iv_shield_copy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="135dp"
                    android:layout_marginBottom="48dp"
                    android:src="@mipmap/img_shield" />

                <TextView
                    android:id="@+id/tv_perfect_copy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:text="@string/phone_is_perfect"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:visibility="visible" />
            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
