<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.formats.NativeContentAdView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingEnd="12dp"
        android:paddingRight="12dp"
        android:paddingTop="20dp">

        <ImageView
            android:id="@+id/contentad_image"
            android:layout_width="128dp"
            android:layout_height="64dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="12dp"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:src="@drawable/img_download_manager_list_ebook" />

        <TextView
            android:id="@+id/contentad_headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-2dp"
            android:layout_toEndOf="@id/contentad_image"
            android:layout_toRightOf="@id/contentad_image"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#161616"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/contentad_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/contentad_headline"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@id/contentad_image"
            android:layout_toRightOf="@id/contentad_image"
            android:ellipsize="end"
            android:gravity="left|start"
            android:maxLines="3"
            android:textColor="#808080"
            android:textSize="12sp" />
    </RelativeLayout>
</com.google.android.gms.ads.formats.NativeContentAdView>
