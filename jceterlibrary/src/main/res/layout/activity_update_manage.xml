<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_palmplay_F5F5F5"
    android:orientation="vertical">

    <include
        layout="@layout/layout_common_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:id="@+id/container_ad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/manage_update_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_palmplay_white" />
    <!--<include layout="@layout/layout_category_listview_empty_view" />-->
    <include layout="@layout/layout_manage_download_listview_empty_view" />
</LinearLayout>

